@{
    ViewBag.Title = "Portada";
}
 
<div class="estilo">
<script type="text/javascript">
    jQuery(document).ready(function () {
        //código a ejecutar cuando el DOM está listo para recibir instrucciones.
        setInterval("cambiarImg()", 5000);
    });
    function cambiarImg() {
        var fotos = Array();
        fotos[0] = "1.jpg";
        fotos[1] = "2.jpg";
        fotos[2] = "3.jpg";
        fotos[3] = "4.jpg";
        random = Math.floor(Math.random() * fotos.length);
        foto_actual = fotos[random];
        url = 'http://@HttpContext.Current.Request.Url.Authority';
        console.log(url);
        console.log("foto = " + foto_actual);
        $(".featured").css("background-image", "url(" + url + "/Content/assets/img/baner/" + foto_actual + ")");
    }
</script>

